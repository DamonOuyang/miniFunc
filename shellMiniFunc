#############################
# shell 
# 程序实现fileback
#############################
#!/bin/sh 

DIRNAME=`ls /root | grep bak` 

if [ -z "$DIRNAME" ] ; then 

mkdir /root/bak 

cd /root/bak 

fi

BACKETC=$(date +%Y%m%d)_etc.tar.gz 

tar zcvf  $BACKETC  /etc 

echo "fileback finished!"


